    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cartId = '{{cart._id}}'; // Obt√©n el ID del carrito de la plantilla

            // --- Manejo de la actualizaci√≥n de cantidad por producto ---
            document.querySelectorAll('.update-btn').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const productId = e.target.dataset.productId;
                    const quantityInput = document.getElementById(`qty-${productId}`);
                    const newQuantity = parseInt(quantityInput.value);

                    if (isNaN(newQuantity) || newQuantity < 1) {
                        alert('Por favor, ingresa una cantidad v√°lida.');
                        return;
                    }

                    try {
                        const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ quantity: newQuantity })
                        });
                        const data = await response.json();

                        if (response.ok) {
                            alert('Cantidad actualizada con √©xito.');
                            window.location.reload(); // Recarga para ver los cambios
                        } else {
                            alert(`Error al actualizar cantidad: ${data.error || 'Mensaje desconocido'}`);
                        }
                    } catch (error) {
                        console.error('Error de red al actualizar cantidad:', error);
                        alert('Ocurri√≥ un error al intentar actualizar la cantidad.');
                    }
                });
            });

            // --- Manejo de la eliminaci√≥n de producto por producto ---
            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const productId = e.target.dataset.productId;

                    if (!confirm('¬øEst√°s seguro de que quieres eliminar este producto del carrito?')) {
                        return;
                    }

                    try {
                        const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
                            method: 'DELETE'
                        });
                        const data = await response.json();

                        if (response.ok) {
                            alert('Producto eliminado del carrito.');
                            window.location.reload(); // Recarga para ver los cambios
                        } else {
                            alert(`Error al eliminar producto: ${data.error || 'Mensaje desconocido'}`);
                        }
                    } catch (error) {
                        console.error('Error de red al eliminar producto:', error);
                        alert('Ocurri√≥ un error al intentar eliminar el producto.');
                    }
                });
            });

            // --- Bot√≥n para Vaciar Carrito ---
            const clearCartBtn = document.getElementById('clear-cart-btn');
            if (clearCartBtn) {
                clearCartBtn.addEventListener('click', async () => {
                    if (!confirm('¬øEst√°s seguro de que quieres vaciar todo el carrito?')) {
                        return;
                    }

                    try {
                        const response = await fetch(`/api/carts/${cartId}`, {
                            method: 'DELETE'
                        });
                        const data = await response.json();

                        if (response.ok) {
                            alert('Carrito vaciado con √©xito.');
                            window.location.reload(); // Recarga para ver los cambios
                        } else {
                            alert(`Error al vaciar carrito: ${data.error || 'Mensaje desconocido'}`);
                        }
                    } catch (error) {
                        console.error('Error de red al vaciar carrito:', error);
                        alert('Ocurri√≥ un error al intentar vaciar el carrito.');
                    }
                });
            }

            // --- Bot√≥n para Finalizar Compra (Checkout) ---
            const checkoutBtn = document.getElementById('checkout-btn');
            if (checkoutBtn) {
                checkoutBtn.addEventListener('click', async () => {
                    if (!confirm('¬øConfirmas que deseas finalizar la compra?')) {
                        return;
                    }

                    try {
                        const response = await fetch(`/api/carts/${cartId}/checkout`, { method: 'POST' });
                        const data = await response.json();

                        if (response.ok) {
                            alert('¬°Compra finalizada con √©xito! üéâ Redireccionando a la p√°gina de confirmaci√≥n.');
                            window.location.href = '/checkout'; // Redirige a la vista de confirmaci√≥n
                        } else {
                            alert(`Error al finalizar la compra: ${data.error || 'Mensaje desconocido'}`);
                        }
                    } catch (error) {
                        console.error('Error de red al finalizar la compra:', error);
                        alert('Ocurri√≥ un error al intentar finalizar la compra.');
                    }
                });
            }
        });
    </script>
</body>
</html>