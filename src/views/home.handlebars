<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>CatÃ¡logo de productos</title>
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
      background-color: #f2f2f2;
    }

    h1 {
      margin-bottom: 20px;
      text-align: center;
    }

    ul {
      list-style-type: none;
      padding: 0;
      max-width: 700px;
      margin: auto;
    }

    li {
      background: #fff;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      padding: 20px;
      border-radius: 8px;
    }

    .btns {
      margin-top: 15px;
    }

    .btns a, .btns button {
      text-decoration: none;
      background-color: #007bff;
      color: white;
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      margin-right: 10px;
      cursor: pointer;
    }

    .btns a:hover, .btns button:hover {
      background-color: #0056b3;
    }

    .nav-links {
      text-align: center;
      margin-top: 40px;
    }

    .nav-links a {
      margin: 0 10px;
      text-decoration: none;
      color: #0077cc;
      font-weight: bold;
    }

    .nav-links a:hover {
      text-decoration: underline;
    }

    .nav-links button {
      margin-top: 20px;
      background-color: #28a745;
    }

    .nav-links button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <h1>ğŸ“¦ CatÃ¡logo de productos</h1>

  <ul>
    {{#each products}}
      <li>
        <p><strong>{{title}}</strong></p>
        <p>{{description}}</p>
        <p>ğŸ’° <strong>Precio:</strong> ${{price}}</p>
        <p>ğŸ“¦ <strong>Stock:</strong> {{stock}}</p>
        <p><strong>CategorÃ­a:</strong> {{category}}</p>

        <div class="btns">
          <a href="/products/{{_id}}">ğŸ” Ver detalles</a>
          <button data-product="{{_id}}" class="add-to-cart">ğŸ›’ Agregar al carrito</button>
        </div>
      </li>
    {{/each}}
  </ul>

  <div class="nav-links">
    <a href="/products">ğŸ§® Ver productos con paginaciÃ³n</a>
    <a href="/realtimeproducts">âš¡ Ver en tiempo real</a>
    <a href="/carts/{{cartId}}">ğŸ›’ Ver carrito actual</a>
    <br><br>
    <button id="checkout">ğŸ§¾ Finalizar compra</button>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const cid = '{{cartId}}';

      // Agregar al carrito
      document.querySelectorAll('.add-to-cart').forEach(btn => {
        btn.addEventListener('click', () => {
          const pid = btn.dataset.product;

          fetch(`/api/carts/${cid}/products/${pid}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ quantity: 1 })
          })
          .then(res => res.json())
          .then(data => {
            alert('ğŸ›’ Producto agregado al carrito');
          })
          .catch(err => {
            alert('âš ï¸ Error al agregar producto');
            console.error(err);
          });
        });
      });

      // Finalizar compra
      const checkoutBtn = document.getElementById('checkout');
      if (checkoutBtn) {
        checkoutBtn.addEventListener('click', () => {
          fetch(`/api/carts/${cid}/checkout`, {
            method: 'POST'
          })
          .then(res => res.json())
          .then(data => {
            window.location.href = '/checkout';
          })
          .catch(err => {
            alert('âš ï¸ Error al finalizar la compra');
            console.error(err);
          });
        });
      }
    });
  </script>
</body>
